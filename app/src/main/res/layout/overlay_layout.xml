<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:layout_margin="8dp"
    android:backgroundTint="@color/overlay_bg">

    <LinearLayout android:padding="8dp" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/bubbleIcon" android:layout_width="56dp" android:layout_height="56dp" android:src="@drawable/ic_tr_gradient" android:contentDescription="TR" />
        <LinearLayout android:id="@+id/contentLayout" android:orientation="vertical" android:layout_marginStart="8dp" android:layout_width="240dp" android:layout_height="wrap_content">
            <EditText android:id="@+id/editText" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Введите текст" android:backgroundTint="#00000000"/>
            <TextView android:id="@+id/txtResult" android:layout_marginTop="6dp" android:textColor="@color/overlay_text" android:textSize="16sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="—"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end">
                <Button android:id="@+id/btnTranslate" android:layout_marginTop="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Перевести"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
